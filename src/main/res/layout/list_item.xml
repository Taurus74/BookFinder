<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/item_padding">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/tbn_width"
        android:layout_height="@dimen/tbn_height"
        android:scaleType="centerCrop"
        android:contentDescription="@string/blanc" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_padding"
        android:layout_toEndOf="@+id/item_image"
        android:layout_marginLeft="@dimen/item_padding"
        android:layout_toRightOf="@+id/item_image"
        tools:text="@string/blanc"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/title_text" />

    <TextView
        android:id="@+id/item_descr"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/item_title"
        android:layout_marginStart="@dimen/item_padding"
        android:layout_toEndOf="@+id/item_image"
        android:layout_marginLeft="@dimen/item_padding"
        android:layout_toRightOf="@+id/item_image"
        android:ellipsize="end"
        android:singleLine="false"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/medium_grey"
        android:textSize="@dimen/descr_text"
        tools:text="@string/blanc" />
</RelativeLayout>
